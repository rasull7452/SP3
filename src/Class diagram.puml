@startuml
'https://plantuml.com/class-diagram

class User {
- String username
- String password
+createUser(String username, String password)
+login(String username, String password)
}

abstract class Media {
- String title
- String category
- int duration
- int rating
- int releaseYear
}

class Movie extends Media {
    - String title
    - String category
    - int duration
    - int rating
    - int releaseYear
}

class HeadMenu {

    +{static}searchMedia(String name)
    +{static}searchMediaByCategory(String name)
    +{static}showSavedMedia()
    +{static}showWatchedMedia()
    +{static}chooseMedia()
    +{static}addMediaToSaved()
    +{static}addMediaToWatched()
}

class App {
    +startApp()
}

class Series extends Media {
    - String title
    - String category
    - int duration
    - int rating
    - int releaseYear

    - int seasons
    - int episodes
}

@enduml